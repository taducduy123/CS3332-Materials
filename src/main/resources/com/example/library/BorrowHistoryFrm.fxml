<AnchorPane prefHeight="456.0" prefWidth="961.0" stylesheets="@../../../primer-light.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.controllers.BorrowHistoryController">
   <children>
      <TableView fx:id="tbBorrows" layoutX="-2.0" layoutY="78.0" prefHeight="279.0" prefWidth="958.0">
        <columns>
          <TableColumn fx:id="colBorrowId" prefWidth="75.0" text="ID">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" opacity="0.4" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/tabel.png" />
                     </image>
                  </ImageView>
               </graphic>
            </TableColumn>
            <TableColumn fx:id="colBookId" prefWidth="141.5" text="Book ID">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" opacity="0.4" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../../img/tabel.png" />
                        </image>
                    </ImageView>
                </graphic>
            </TableColumn>
          <TableColumn fx:id="colBookName" prefWidth="186.5" text="Book Name">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" opacity="0.4" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/tabel.png" />
                     </image>
                  </ImageView>
               </graphic>
            </TableColumn>
            <TableColumn fx:id="colBorrowDate" prefWidth="149.5" text="Borrow Date">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" opacity="0.4" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/tabel.png" />
                     </image>
                  </ImageView>
               </graphic>
            </TableColumn>
            <TableColumn fx:id="colReturnDate" prefWidth="188.0" text="Return Appointment">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" opacity="0.4" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/tabel.png" />
                     </image>
                  </ImageView>
               </graphic>
            </TableColumn>
            <TableColumn fx:id="colDueDate" prefWidth="215.5" text="Return Date">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" opacity="0.4" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/tabel.png" />
                     </image>
                  </ImageView>
               </graphic>
            </TableColumn>
        </columns>
      </TableView>
      <Button fx:id="btnReturn" layoutX="350.0" layoutY="376.0" mnemonicParsing="false" onAction="#onClickReturn" text="Return book" />
      <GridPane layoutX="8.0" layoutY="10.0" prefHeight="30.0" prefWidth="323.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="157.5" minWidth="10.0" prefWidth="71.5" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="264.0" minWidth="10.0" prefWidth="251.5" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Search:">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Label>
            <TextField fx:id="txtSearch" onKeyPressed="#onSearch" prefHeight="36.0" prefWidth="256.0" promptText="Book Name" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
